<?xml version="1.0"?>
<smooks-resource-list xmlns="http://www.milyn.org/xsd/smooks-1.0.xsd">

    <resource-config selector="global-parameters">
        <param name="stream.filter.type">SAX</param>
    </resource-config>

    <resource-config selector="org.jboss.wise.core.mapper.mappingObject.InternalObject">
        <resource>org.milyn.javabean.BeanPopulator</resource>
        <param name="beanId">singleInput</param>
        <param name="beanClass">java.util.HashMap</param>
        <param name="bindings">
            <binding property="textInput" type="String" selector="text" />
        </param>
    </resource-config>
    
   


</smooks-resource-list>